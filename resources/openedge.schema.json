{
  "$schema": "http://json-schema.org/schema",
  "$id": "https://riverside-software.fr/openedge-project.json",
  "definitions": {},
  "id": "openedge.json",
  "type": "object",
  "required": ["name", "version", "oeversion", "graphicalMode", "buildPath"],
  "properties": {
    "name": {
      "id": "/properties/name",
      "description": "Project name",
      "type": "string"
    },
    "version": {
      "id": "/properties/version",
      "description": "Project version",
      "type": "string"
    },
    "oeversion": {
      "id": "/properties/oeversion",
      "description": "OpenEdge version for this project",
      "enum": [
        "9.1E",
        "10.2B",
        "11.5",
        "11.6",
        "11.7",
        "12.2",
        "12.4",
        "12.5",
        "ESAP"
      ],
      "type": "string"
    },
    "graphicalMode": {
      "id": "/properties/graphicalMode",
      "description": "Use prowin or _progres to start OpenEdge sessions",
      "default": false,
      "type": "boolean"
    },
    "extraParameters": {
      "id": "/properties/parameterFiles",
      "description": "Extra parameters passed to Progress executable",
      "type": "string"
    },
    "buildDirectory": {
      "id": "/properties/buildDirectory",
      "description": "Default build directory (if not specified in source directory)",
      "type": "string"
    },
    "buildPath": {
      "id": "/properties/buildPath",
      "description": "Source and PROPATH entries",
      "items": {
        "type": "object",
        "required": ["type", "path"],
        "properties": {
          "type": {
            "description": "Entry type",
            "enum": [
              "source",
              "propath"
            ],
            "type": "string"
          },
          "path": {
            "description": "Path (relative to root directory). Special value ${DLC} can be used.",
            "type": "string"
          },
          "build": {
            "description": "Optional build directory (relative to root directory). Defaults to buildDirectory",
            "type": "string"
          },
          "xref": {
            "description": "Optional XREF directory (relative to root directory). Defaults to .builder/pct",
            "type": "string"
          }
        }
      },
      "type": "array"
    },
    "dumpFiles": {
      "id": "/properties/dumpFiles",
      "description": "Comma-separated list of DF files",
      "items": {
        "type": "string"
      },
      "type": "array"
    },
    "dbConnections": {
      "id": "/properties/dbConnections",
      "description": "Database connection strings (one DB per entry)",
      "items": {
        "type": "string"
      },
      "type": "array"
    },
    "aliases": {
      "id": "/properties/aliases",
      "description": "Semi-colon separated list of aliases. Eeach entry is a comma-separated list, where first entry is the DB name followed by all aliases",
      "type": "string"
    },
    "numThreads": {
      "id": "/properties/threads",
      "description": "Number of background worker threads",
      "type": "integer",
      "minimum": 1,
      "maximum": 32
    },
    "profiles": {
      "id": "/properties/profiles",
      "description": "Extra profiles",
      "items": {
        "type": "object",
        "required": ["name", "value"],
        "properties": {
          "name": {
            "description": "Profile name",
            "type": "string"
          },
          "inherits": {
            "description": "Inherits all values from another quality profile. Use 'default' for main profile. Can be empty.",
            "type": "string"
          },
          "value": {
            "description": "Profile value",
            "type": "object",
            "properties": {
              "oeversion": {
                "id": "/properties/oeversion",
                "description": "OpenEdge version for this project",
                "enum": [
                  "9.1E",
                  "10.2B",
                  "11.5",
                  "11.6",
                  "11.7",
                  "12.2",
                  "12.4",
                  "12.5",
                  "ESAP"
                ],
                "type": "string"
              },
              "graphicalMode": {
                "id": "/properties/graphicalMode",
                "description": "Use prowin or _progres to start OpenEdge sessions",
                "default": false,
                "type": "boolean"
              },
              "extraParameters": {
                "id": "/properties/parameterFiles",
                "description": "Extra parameters passed to Progress executable",
                "type": "string"
              },
              "buildDirectory": {
                "id": "/properties/buildDirectory",
                "description": "Default build directory (if not specified in source directory)",
                "type": "string"
              },
              "buildPath": {
                "id": "/properties/buildPath",
                "description": "Source and PROPATH entries",
                "items": {
                  "type": "object",
                  "required": ["type", "path"],
                  "properties": {
                    "type": {
                      "description": "Entry type",
                      "enum": [
                        "source",
                        "propath"
                      ],
                      "type": "string"
                    },
                    "path": {
                      "description": "Path (relative to root directory). Special value ${DLC} can be used.",
                      "type": "string"
                    },
                    "build": {
                      "description": "Optional build directory (relative to root directory). Defaults to buildDirectory",
                      "type": "string"
                    },
                    "xref": {
                      "description": "Optional XREF directory (relative to root directory). Defaults to .builder/pct",
                      "type": "string"
                    }
                  }
                },
                "type": "array"
              },
              "dumpFiles": {
                "id": "/properties/dumpFiles",
                "description": "Comma-separated list of DF files",
                "items": {
                  "type": "string"
                },
                "type": "array"
              },
              "dbConnections": {
                "id": "/properties/dbConnections",
                "description": "Database connection strings (one DB per entry)",
                "items": {
                  "type": "string"
                },
                "type": "array"
              },
              "aliases": {
                "id": "/properties/aliases",
                "description": "Semi-colon separated list of aliases. Eeach entry is a comma-separated list, where first entry is the DB name followed by all aliases",
                "type": "string"
              },
              "numThreads": {
                "id": "/properties/threads",
                "description": "Number of background worker threads",
                "type": "integer",
                "minimum": 1,
                "maximum": 32
              }
            }
          }
        }
      }
    }
  }
}
